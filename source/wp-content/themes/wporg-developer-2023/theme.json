{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"blocks": {
			"wporg/code-reference-title": {
				"color": {
					"palette": [
						{
							"slug": "syntax-black",
							"color": "#000000",
							"name": "Black"
						},
						{
							"slug": "syntax-red",
							"color": "#d63638",
							"name": "Red"
						},
						{
							"slug": "syntax-green",
							"color": "#008a20",
							"name": "Green"
						},
						{
							"slug": "syntax-blue",
							"color": "#135e96",
							"name": "Blue"
						},
						{
							"slug": "syntax-grey",
							"color": "#646970",
							"name": "Grey"
						}
					]
				}
			}
		}
	},
	"styles": {
		"blocks": {
			"wporg/chapter-list": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"elements": {
					"heading": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--normal) !important"
						}
					},
					"link": {
						"color": {
							"text": "var:preset|color|blueberry-1"
						}
					}
				}
			},
			"wporg/table-of-contents": {
				"color": {
					"background": "var:preset|color|blueberry-4",
					"text": "var:preset|color|blueberry-1"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"elements": {
					"heading": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--normal) !important"
						}
					},
					"link": {
						"color": {
							"text": "inherit"
						}
					}
				}
			}
		}
	}
}
